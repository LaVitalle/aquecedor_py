{
  "name": "aquecedor-whatsapp-api",
  "description": "API FastAPI para integração com WhatsApp",
  "version": "1.0.0",
  "type": "python",
  "port": 8000,
  "startCommand": "uvicorn main:app --host 0.0.0.0 --port 8000",
  "buildCommand": "pip install -r requirements.txt",
  "environment": {
    "DEBUG": "False",
    "HOST": "0.0.0.0",
    "PORT": "8000"
  },
  "healthCheck": {
    "path": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  }
}
